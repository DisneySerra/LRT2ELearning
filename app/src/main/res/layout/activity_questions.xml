<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF3C56FF"
    tools:context=".Questions">

    <Button
        android:id="@+id/btnB"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_above="@+id/btnC"
        android:layout_alignParentStart="true"
        android:background="#6960EC"
        android:onClick="checkAnswers"
        android:text="2" />

    <Button
        android:id="@+id/btnA"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_above="@+id/btnB"
        android:layout_alignParentStart="true"
        android:background="#357EC7"
        android:onClick="checkAnswers"
        android:text="1" />

    <Button
        android:id="@+id/btnD"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#3BB9FF"
        android:onClick="checkAnswers"
        android:text="4" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_above="@+id/btnD"
        android:layout_alignParentStart="true"
        android:background="#342D7E"
        android:onClick="checkAnswers"
        android:text="3" />

    <TextView
        android:id="@+id/tvStation"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:fontFamily="@font/lato"
        android:text="Station "
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="149dp"
        android:fontFamily="@font/lato"
        android:text="question"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Your Score: "
        android:textColor="@android:color/black"
        android:textSize="24sp" />

</RelativeLayout>